<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.liz.loopsviewpager.LoopViewPager
        android:id="@+id/alvp_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ccbbcc"
        />
    <com.liz.loopsviewpager.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@id/alvp_pager"
        android:layout_alignBottom="@id/alvp_pager"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>
